<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F4F6"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:fontFamily="sans-serif-black"
        android:text="WELCOME USER"
        android:textColor="#333333"
        android:textSize="34sp" />

    <!-- User Details -->
    <TextView
        android:id="@+id/textViewDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:fontFamily="sans-serif-medium"
        android:padding="12dp"
        android:text="Name: \nAge: \nPhone: \nUser ID: "
        android:textColor="#333333"
        android:textSize="24sp" />

    <!-- Calculator Button -->
    <Button
        android:id="@+id/buttonCalculator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="18dp"
        android:background="@color/purple_500"
        android:padding="12dp"
        android:text="Calculator"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />

    <!-- Links Redirection Button -->
    <Button
        android:id="@+id/buttonLinks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="18dp"
        android:background="@color/purple_500"
        android:padding="12dp"
        android:text="Links Redirection"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />

    <!-- Hand Cricket Button -->
    <Button
        android:id="@+id/buttonHandCricket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="18dp"
        android:background="@color/purple_500"
        android:padding="12dp"
        android:text="Hand Cricket"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />

    <!-- Hangman Button -->
    <Button
        android:id="@+id/buttonHangman"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="18dp"
        android:background="@color/purple_500"
        android:padding="12dp"
        android:text="Hangman"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />

</LinearLayout>
